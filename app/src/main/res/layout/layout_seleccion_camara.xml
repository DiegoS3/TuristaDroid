<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:background="@drawable/image_selection_background">

    <TextView
            android:text="@string/tvSelection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            android:fontFamily="@font/roboto_bold"
            android:textSize="24sp"
            android:textColor="@color/colorBackground"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"/>
    <View style="@style/Divider" tools:ignore="MissingConstraints"
          android:id="@+id/horDivider" app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintHorizontal_bias="0.0" app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginTop="15dp"/>
    <View
            android:layout_width="1dp"
            android:layout_height="63dp"
            android:background="@color/colorBackground" tools:ignore="MissingConstraints"
            android:id="@+id/verDivider"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="64dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/icon_gallery"
            android:id="@+id/iconGallery"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.651" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="18dp" app:layout_constraintTop_toBottomOf="@+id/horDivider"/>
    <TextView
            android:text="@string/btnGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txtGaleria"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.862"
            android:fontFamily="@font/roboto_bold" android:textColor="@color/colorBackground"
            android:textSize="18sp" android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/horDivider"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/icon_camera" android:id="@+id/iconCamera"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.118"
            android:layout_marginTop="18dp" app:layout_constraintTop_toBottomOf="@+id/horDivider"/>
    <TextView
            android:text="@string/btnCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txtCamara"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.23"
            android:fontFamily="@font/roboto_bold" android:textColor="@color/colorBackground"
            android:textSize="18sp"
            android:layout_marginTop="18dp" app:layout_constraintTop_toBottomOf="@+id/horDivider"/>

</androidx.constraintlayout.widget.ConstraintLayout>
