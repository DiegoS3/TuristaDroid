<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="150dp">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:background="@drawable/image_selection_background">

        <TextView
                android:text="@string/tvSelection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView2"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:fontFamily="@font/roboto_bold" app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintVertical_bias="0.245" android:textSize="24sp"
                android:textColor="@color/colorBackground"/>
        <View style="@style/Divider" tools:ignore="MissingConstraints" tools:layout_editor_absoluteY="87dp"
              tools:layout_editor_absoluteX="0dp" android:id="@+id/horDivider"/>
        <View
                android:layout_width="1dp"
                android:layout_height="63dp"
                android:background="@color/colorBackground" tools:ignore="MissingConstraints"
                android:id="@+id/verDivider" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="1.0"/>
        <TextView
                android:text="@string/btnCamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txtCamara"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.233" app:layout_constraintVertical_bias="0.873"
                android:fontFamily="@font/roboto_bold" android:textColor="@color/colorBackground"
                android:textSize="18sp"/>
        <TextView
                android:text="@string/btnGallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txtGaleria"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.853" app:layout_constraintVertical_bias="0.873"
                android:fontFamily="@font/roboto_bold" android:textColor="@color/colorBackground"
                android:textSize="18sp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/icon_camera" android:id="@+id/iconCamera"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.118"
                app:layout_constraintVertical_bias="0.873"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/icon_gallery"
                android:id="@+id/iconGallery"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.658" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.873"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>