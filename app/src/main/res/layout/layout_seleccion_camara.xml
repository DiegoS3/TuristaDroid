<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_margin="10dp"
        android:background="@drawable/image_selection_background">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/gradient">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">
            <TextView
                    android:text="@string/tvSelection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="24sp"
                    android:textColor="@color/colorBackground"/>

            <View style="@style/Divider"
                  android:id="@+id/horDivider"
                  android:layout_marginTop="15dp"/>

        </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:baselineAligned="false">
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="60dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="10dp" tools:ignore="UseCompoundDrawables">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/icon_gallery"
                            android:id="@+id/iconGallery"/>
                    <TextView
                            android:text="@string/btnGallery"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtGaleria"
                            android:fontFamily="@font/roboto_bold"
                            android:textColor="@color/colorBackground"
                            android:textSize="18sp" />
                </LinearLayout>
                <View style="@style/Divider"
                      android:layout_width="1dp"
                      android:layout_height="93dp"
                      android:id="@+id/verDivider"
                      android:layout_marginTop="58dp"/>
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginTop="60dp"
                        android:layout_height="match_parent"
                        android:padding="10dp" tools:ignore="UseCompoundDrawables">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/icon_camera"
                            android:id="@+id/iconCamera"/>
                    <TextView
                            android:text="@string/btnCamera"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtCamara"
                            android:fontFamily="@font/roboto_bold"
                            android:textColor="@color/colorBackground"
                            android:textSize="18sp"/>

                </LinearLayout>
            </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
