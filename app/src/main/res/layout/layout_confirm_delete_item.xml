<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/image_selection_background">

    <RelativeLayout
            android:orientation="vertical"
            android:layout_width="207dp"
            android:layout_height="62dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/colorDeletePlace"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintVertical_bias="1.0"
            android:id="@+id/relativeLayout" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0">
        <TextView
                android:text="@string/cancelDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtCancel"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/colorBackground"
                android:textSize="18sp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="19dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="18dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="60dp"
                android:layout_alignParentStart="true"/>
    </RelativeLayout>
    <TextView
            android:text="@string/questionDeletePlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:fontFamily="@font/roboto_bold"
            android:textSize="22sp"
            android:textColor="@color/colorBackground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"/>

    <RelativeLayout
            android:layout_width="208dp"
            android:layout_height="62dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horDivider"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/colorConfirmPlace"
            app:layout_constraintEnd_toStartOf="@+id/relativeLayout">

        <TextView
                android:text="@string/confirmDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtConfirm"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/colorBackground"
                android:textSize="18sp"
                android:layout_marginTop="19dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="57dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="18dp" android:layout_alignParentStart="true"
                android:layout_marginStart="85dp"/>
    </RelativeLayout>
    <View style="@style/Divider"
          tools:ignore="MissingConstraints"
          android:id="@+id/horDivider"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/textView2"
          android:layout_marginTop="15dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
