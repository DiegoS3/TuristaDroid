<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/fragment_MyPlaces">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/placeSwipe_MyPlaces"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteY="-84dp"
            tools:layout_editor_absoluteX="0dp">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/placeScroll_MyPlaces"
                style="@android:style/Widget.DeviceDefault.Light.ScrollView">


            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/placeRecycler_MyPlaces"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteX="222dp"
                    tools:layout_editor_absoluteY="169dp"
                    tools:listitem="@layout/item_list_places"
            >
            </androidx.recyclerview.widget.RecyclerView>

        </ScrollView>

        <ProgressBar
                android:id="@+id/pgbPlaces_MyPlaces"
                style="?android:attr/progressBarStyle"
                android:layout_width="117dp"
                android:layout_height="78dp"
                tools:layout_editor_absoluteX="147dp"
                tools:layout_editor_absoluteY="250dp"/>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnFloatAddPlace_MyPlaces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp"
            android:clickable="true"
            android:focusable="true"
            app:backgroundTint="@color/colorLightGradient"
            app:srcCompat="@drawable/ic_add"/>

</RelativeLayout>