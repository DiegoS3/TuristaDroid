<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="@color/colorBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <TextView
            android:text="@string/newPlace"
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="20sp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/colorLetter"
            android:layout_marginTop="28dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="48dp" android:layout_alignParentEnd="true" android:layout_marginEnd="199dp"/>

    <EditText
            android:layout_width="316dp"
            android:layout_height="44dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtNamePlace_NewPlace"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.536"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/colorLetterInput"
            app:layout_constraintVertical_bias="0.499"
            android:textColorHint="@color/colorLetterInput"
            android:hint="@string/namePlace"
            android:background="@drawable/box_inputs"
            android:paddingHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="48dp" android:layout_alignParentEnd="true" android:layout_marginEnd="47dp"/>

    <EditText
            android:layout_width="316dp"
            android:layout_height="44dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtUbicationPlace_NewPlace"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.536"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/colorLetterInput"
            app:layout_constraintVertical_bias="0.499"
            android:textColorHint="@color/colorLetterInput"
            android:hint="@string/ubicationPlace"
            android:background="@drawable/box_inputs"
            android:paddingHorizontal="10dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="48dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/txtNamePlace_NewPlace"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="47dp"/>

    <Button
            android:text="@string/btnOpenMap"
            android:layout_width="135dp"
            android:layout_height="46dp"
            android:id="@+id/btnRegister"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.928"
            android:textColor="@color/colorLetter"
            android:background="@drawable/box_buttons"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/txtUbicationPlace_NewPlace"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="138dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="139dp"/>

    <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vpImagesPlace_NewPlace"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/btnRegister"
            android:paddingEnd="80dp"
            android:paddingStart="80dp"/>

</RelativeLayout>