<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".navigation_drawer.ui.myprofile.MyProfileFragment" android:background="@color/colorBackground">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="850dp"
            android:padding="16dp"
            android:background="@color/colorBackground"
            tools:ignore="MissingConstraints">

    <EditText
            android:layout_width="316dp"
            android:layout_height="42dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txtPassProfile"
            android:hint="@string/txtNewPassword"
            android:textColor="@color/colorLetterInput" android:textColorHint="@color/colorLetterInput"
            android:fontFamily="@font/roboto_bold" android:background="@drawable/box_inputs"
            android:paddingHorizontal="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="275dp"
            android:autofillHints=""
            />

        <ProgressBar
                android:id="@+id/progressBar_MyProfile"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="270dp"
                android:layout_height="20dp"
                android:indeterminate="false"
                android:maxHeight="20dip"
                android:minHeight="20dip"
                android:progress="0"
                android:layout_marginTop="317dp"
                android:layout_marginStart="30dp"
                />
        <TextView
                android:id="@+id/password_strength_MyProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/password_strength_weak"
                app:layout_constraintBottom_toBottomOf="@+id/progressBar_MyProfile"
                app:layout_constraintEnd_toEndOf="@+id/txtPassProfile"
                app:layout_constraintTop_toBottomOf="@+id/txtPassProfile" android:layout_marginTop="0dp"
                android:layout_below="@+id/txtPassProfile" android:layout_marginEnd="0dp"
                android:layout_alignEnd="@+id/txtPassProfile" android:layout_toEndOf="@+id/progressBar_MyProfile"
                android:layout_marginStart="0dp"/>
        <ImageView
                android:layout_width="118dp"
                android:layout_height="118dp" android:id="@+id/imaProfile"
                android:src="@drawable/ima_user"
                android:layout_marginStart="125dp"
                />
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp" android:id="@+id/imaTwitter"
            android:src="@drawable/ic_twitter"
            android:layout_marginStart="200dp"
            android:layout_marginTop="370dp"
            />
        <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp" android:id="@+id/imaInstagram"
                android:src="@drawable/ic_instagram"
                android:layout_marginStart="100dp"
                android:layout_marginTop="370dp"
        />
    <EditText
            android:layout_width="316dp"
            android:layout_height="42dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtUserName"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/colorLetterInput"
            android:textColorHint="@color/colorLetterInput" android:hint="@string/txtName"
            android:background="@drawable/box_inputs" android:paddingHorizontal="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="128dp"

            />
    <EditText
            android:layout_width="316dp"
            android:layout_height="42dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtNameUserProfile"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/colorLetterInput"
            android:textColorHint="@color/colorLetterInput" android:hint="@string/txtNameUser"
            android:background="@drawable/box_inputs" android:paddingHorizontal="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="177dp"
            />
        <EditText
                android:layout_width="316dp"
                android:layout_height="42dp"
                android:inputType="textPersonName|textEmailSubject"
                android:ems="10"
                android:id="@+id/txtEmailProfile"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/colorLetterInput"
                android:textColorHint="@color/colorLetterInput" android:hint="@string/txtEmail"
                android:background="@drawable/box_inputs" android:paddingHorizontal="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="226dp"
                />
        <Button
            android:text="@string/btnSave"
            android:layout_width="135dp"
            android:layout_height="46dp" android:id="@+id/btnSave"
            android:textColor="@color/colorLetter" android:background="@drawable/box_buttons" android:textSize="18sp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="465dp"
            />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>