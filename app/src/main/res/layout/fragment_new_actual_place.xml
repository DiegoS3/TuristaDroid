<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".navigation_drawer.ui.newplace.NewActualPlaceFragment">
    <RelativeLayout
            android:background="@color/colorBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp">
            <TextView
                    android:text="@string/newActualPlace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="62dp"
                    android:id="@+id/textView"
                    android:textSize="20sp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/colorLetter"
                    android:layout_marginTop="18dp"/>

            <EditText
                    android:layout_width="316dp"
                    android:layout_height="44dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/txtNamePlace_NewActualPlace"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/colorLetterInput"
                    android:textColorHint="@color/colorLetterInput"
                    android:hint="@string/namePlace"
                    android:maxLength="30"
                    android:background="@drawable/box_inputs"
                    android:paddingHorizontal="10dp"
                    android:layout_marginTop="20dp"/>

            <EditText
                    android:layout_width="316dp"
                    android:layout_height="44dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/txtUbicationPlace_NewActualPlace"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/colorLetterInput"
                    android:autoSizeTextType="uniform"
                    android:textColorHint="@color/colorLetterInput"
                    android:hint="@string/ubicationPlace"
                    android:background="@drawable/box_inputs"
                    android:paddingHorizontal="10dp"
                    android:enabled="false"
                    android:layout_marginTop="20dp"/>

            <androidx.cardview.widget.CardView
                    android:id="@+id/cv_slider_NewActualPlace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    android:layout_marginStart="48dp"
                    android:layout_marginEnd="48dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="20dp">

                <com.smarteist.autoimageslider.SliderView
                        android:id="@+id/imageSlider"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:sliderAnimationDuration="600"
                        app:sliderAutoCycleDirection="back_and_forth"
                        app:sliderIndicatorAnimationDuration="600"
                        app:sliderIndicatorEnabled="true"
                        app:sliderIndicatorGravity="center_horizontal|bottom"
                        app:sliderIndicatorMargin="15dp"
                        app:sliderIndicatorOrientation="horizontal"
                        app:sliderIndicatorPadding="3dp"
                        app:sliderIndicatorRadius="2dp"
                        app:sliderIndicatorSelectedColor="#5A5A5A"
                        app:sliderIndicatorUnselectedColor="#FFF"
                        app:sliderScrollTimeInSec="1"/>

            </androidx.cardview.widget.CardView>

            <Button
                    android:text="@string/btnAddImage"
                    android:layout_width="135dp"
                    android:layout_height="46dp"
                    android:id="@+id/btnAddImage_NewActualPlace"
                    android:textColor="@color/colorLetter"
                    android:background="@drawable/box_buttons"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"/>

            <Button
                    android:text="@string/btnSavePlace"
                    android:layout_width="135dp"
                    android:layout_height="46dp"
                    android:id="@+id/btnSave_NewActualPlace"
                    android:textColor="@color/colorLetter"
                    android:background="@drawable/box_buttons"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"/>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>