<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        tools:context=".splash.SplashScreenActivity">

        <ImageView
                android:layout_width="600dp"
                android:layout_height="420dp"
                app:srcCompat="@drawable/mundo"
                android:id="@+id/imgMundo_Splash"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textTitleSplash"/>
        <ImageView
                android:layout_width="600dp"
                android:layout_height="420dp"
                app:srcCompat="@drawable/pin_1"
                android:id="@+id/imgPines_Splash"
                app:layout_constraintTop_toBottomOf="@+id/textTitleSplash" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
        <ImageView
                android:layout_width="600dp"
                android:layout_height="420dp"
                app:srcCompat="@drawable/pin_2"
                android:id="@+id/imgPines1_Splash"
                app:layout_constraintTop_toBottomOf="@+id/textTitleSplash" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
        <ImageView
                android:layout_width="600dp"
                android:layout_height="420dp"
                app:srcCompat="@drawable/pin_3"
                android:id="@+id/imgPines2_Splash"
                app:layout_constraintTop_toBottomOf="@+id/textTitleSplash" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:layout_width="257dp"
                android:layout_height="155dp" android:id="@+id/textTitleSplash"
                android:text="@string/app_name"
                android:textColor="@color/colorLetter" android:textSize="55sp"
                android:textStyle="bold" android:textAlignment="center" android:fontFamily="@font/roboto_bold"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:text="@string/developed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textDevelopment"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/colorLetter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="260dp"
                app:layout_constraintTop_toBottomOf="@+id/imgMundo_Splash"/>


</androidx.constraintlayout.widget.ConstraintLayout>